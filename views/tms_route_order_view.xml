<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tms_route_order_tree" model="ir.ui.view">
        <field name="name">tms.route.order.tree</field>
        <field name="model">tms.route.order</field>
        <field name="arch" type="xml">
            <tree string="Tms Route Sheet">
                <field name="driver_id"/>
                <field name="route_id"/>
                <field name="order_num"/>
            </tree>
        </field>
    </record>

    <record id="action_tms_route_order_tree" model="ir.actions.act_window">
        <field name="name">tms.route.sheet</field>
        <field name="res_model">tms.route.order</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_tms_route_order_tree"/>
    </record>

    <record id="view_tms_route_order_form" model="ir.ui.view">
        <field name="name">tms.route.order.form</field>
        <field name="model">tms.route.order</field>
        <field name="arch" type="xml">
            <form string="Tms form">
                <sheet>
                    <group>
                        <field name="driver_id"/>
                        <field name="route_id"/>
                        <field name="order_num"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tms_route_order_form" model="ir.actions.act_window">
        <field name="name">tms.route.order.add</field>
        <field name="res_model">tms.route.order</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_tms_route_order_form"/>
    </record>
</odoo>

