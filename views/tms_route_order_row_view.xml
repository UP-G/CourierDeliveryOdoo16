<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tms_route_order_row_tree" model="ir.ui.view">
        <field name="name">tms.route.order.row.tree</field>
        <field name="model">tms.route.order.row</field>
        <field name="arch" type="xml">
            <tree string="Tms Route Sheet">
                <field name="id"/>
                <field name="route_point_id"/>
                <field name="route_order_id"/>
                <field name="delivered"/>
                <field name="returned_client"/>
                <field name="returned_store"/>
                <field name="complaint"/>
                <field name="arrival_date"/>

                <button name="show_tms_buttons" type="object" class="oe_stat_button"
                                icon="fa-send">
                        </button>
            </tree>
        </field>
    </record>

    <record id="view_tms_route_order_row_form" model="ir.ui.view">
        <field name="name">tms.route.order.row.form</field>
        <field name="model">tms.route.order.row</field>
        <field name="arch" type="xml">
            <form string="Tms form">
                <sheet>
                    <group>
                        <field name="id"/>
                        <field name="route_point_id"/>
                        <field name="route_order_id"/>
                        <field name="delivered"/>
                        <field name="returned_client"/>
                        <field name="returned_store"/>
                        <field name="complaint"/>
                        <field name="arrival_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_tms_route_order_row" model="ir.actions.act_window">
        <field name="name">tms.route.order.row.add</field>
        <field name="res_model">tms.route.order.row</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

