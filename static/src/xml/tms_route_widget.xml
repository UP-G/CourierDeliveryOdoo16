<?xml version="1.0" encoding="UTF-8" ?>

<templates xml:space="preserve">
    <t t-name="tms.RouteWidget" owl="1">
        <div class="container">
            <div class="card mt-2">
            <div class="card-header">
                <h2 class="card-title">Информация о заказе</h2>
            </div>
                <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>Дата прибытия</th>
                        <td><t t-esc="state.orders.arrival_date"></t></td>
                    </tr>
                    <tr>
                        <th>Дата возврата от клиента</th>
                        <td><t t-esc="state.orders.returned_client"></t></td>
                    </tr>
                    <tr>
                        <th>Дата возврата в склад</th>
                        <td><t t-esc="state.orders.returned_store"></t></td>
                    </tr>
                    <tr>
                        <th>Дата отдачи товара клиенту</th>
                        <td><t t-esc="state.orders.delivered"></t></td>
                    </tr>
                    <tr>
                        <th>Дата подачи жалобы</th>
                        <td><t t-esc="state.orders.complaint"></t></td>
                    </tr>
                </table>
            </div>
        </div>
        </div>
            <div class="d-flex justify-content-center">
                <div class="o_tms_action_nav" style="width: 100%;">
                    <button class="o_tms_btn_Arrival btn btn-lg btn-block btn-primary fa fa-cubes mt-4" t-on-click="onArrivalButtonClick" title="Arrived to client and awaiting">Arrived</button>
                    <button class="o_tms_btn_Delivered btn btn-lg btn-block btn-secondary border fa fa-hourglass-o mt-4" t-on-click="onDeliveredButtonClick" title="Goods delivered to client">Delivered</button>
                    <button class="o_tms_btn_Returned btn btn-lg btn-block btn-secondary border fa fa-cart-arrow-down mt-4" t-on-click="onReturnedClientButtonClick" title="Returns accepted for delivery to stock">Received</button>
                    <button class="o_tms_btn_Claims btn btn-lg btn-block btn-secondary border fa fa-warning mt-4" t-on-click="onNoClaimsButtonClick" title="Client have no claims">No claims</button>
                </div>
            </div>
        </div>
    </t>

</templates>
