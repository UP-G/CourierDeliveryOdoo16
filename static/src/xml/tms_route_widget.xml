<?xml version="1.0" encoding="UTF-8" ?>

<templates xml:space="preserve">
    <t t-name="tms.RouteWidget" owl="1">
        <div class="container">
            <div class="card mt-2">
            <div class="card-header">
                <h2 class="card-title">Информация о заказе</h2>
            </div>
                <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>Дата прибытия</th>
                        <td><t t-esc="state.orders.arrival_date"></t></td>
                    </tr>
                    <tr>
                        <th>Дата возврата от клиента</th>
                        <td><t t-esc="state.orders.returned_client"></t></td>
                    </tr>
                    <tr>
                        <th>Дата возврата в склад</th>
                        <td><t t-esc="state.orders.returned_store"></t></td>
                    </tr>
                    <tr>
                        <th>Дата отдачи товара клиенту</th>
                        <td><t t-esc="state.orders.delivered"></t></td>
                    </tr>
                    <tr>
                        <th>Дата подачи жалобы</th>
                        <td><t t-esc="state.orders.complaint"></t></td>
                    </tr>
                </table>
            </div>
        </div>
        </div>
            <div class="d-flex justify-content-center">
                <div class="btn-group-vertical p-2" style="width: 100%;">
                    <button class="btn btn-lg btn-block btn-primary mt-4" t-on-click="onArrivalButtonClick">Прибыл к месту назначения</button>
                    <button class="btn btn-lg btn-block btn-primary mt-4" t-on-click="onReturnedClientButtonClick">Принял</button>
                    <button class="btn btn-lg btn-block btn-primary mt-4" t-on-click="onDeliveredButtonClick">Передал</button>
                    <button class="btn btn-lg btn-block btn-primary mt-4" t-on-click="onNoClaimsButtonClick">Нет претензий к доставке</button>
                </div>
            </div>
        </div>
    </t>

</templates>
