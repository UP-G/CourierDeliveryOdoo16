<?xml version="1.0" encoding="UTF-8" ?>

<templates xml:space="preserve">
    <t t-name="tms.RouteWidget" owl="1">
        <div class="container cdf">
            <div class="card mt-2">
            <div class="card-header">
                <h2 class="card-title">Информация о заказе</h2>
            </div>
                <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th title="Date arrival">Date arrival</th>
                        <td><t t-esc="state.orders.arrival_date"></t></td>
                    </tr>
                    <tr>
                        <th title="Date return from client">Date return from client</th>
                        <td><t t-esc="state.orders.returned_client"></t></td>
                    </tr>
                    <tr>
                        <th title="Date return from store">Date return from store</th>
                        <td><t t-esc="state.orders.returned_store"></t></td>
                    </tr>
                    <tr>
                        <th title="Date deliver">Date deliver</th>
                        <td><t t-esc="state.orders.delivered"></t></td>
                    </tr>
                    <tr>
                        <th title="Date claim">Date claim</th>
                        <td><t t-esc="state.orders.complaint"></t></td>
                    </tr>
                </table>
            </div>
        </div>
        </div>
            <div class="d-flex justify-content-center">
                <div class="o_tms_action_nav" style="width: 100%;">
                    <button title="Arrival" class="o_tms_btn_Arrival btn btn-lg btn-block btn-secondary border fa fa-clock-o mt-4" t-on-click="onArrivalButtonClick"> Arrival</button>
                    <button title="Return from client" class="o_tms_btn_Delivered btn btn-lg btn-block btn-secondary border fa fa-shopping-cart mt-4" t-on-click="onReturnedClientButtonClick"> Return from client</button>
                    <button title="Delivered" class="o_tms_btn_Returned btn btn-lg btn-block btn-secondary border fa fa-cubes  mt-4" t-on-click="onDeliveredButtonClick"> Delivered</button>
                    <button title="No claims" class="o_tms_btn_Claims btn btn-lg btn-block btn-secondary border fa fa-warning mt-4" t-on-click="onNoClaimsButtonClick"> No claims</button>
                </div>
            </div>
        </div>
    </t>

</templates>
