<?xml version="1.0" encoding="UTF-8" ?>

<template xml:space="preserve">

    <t t-name="TmsOrdersList">
            <t t-call="TmsOrderList2"></t>
            <t t-call="tmsOrderList3"></t>
    </t>

    <t t-name="TmsOrderList2">
        <div class="container">
        <div class="card-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Компания</th>
                            <th>Маршрут</th>
                            <th>Номер заказа</th>
                        </tr>
                     </thead>
                    <tbody>
<!--                        <tr t-foreach="this.state.tmsPoints" t-as="point" t-key="point.id">-->
<!--                            <td t-esc="point.company_name"/>-->
<!--                            <td t-esc="point.route_name"/>-->
<!--                            <td t-esc="point.order_num"/>-->
<!--                        </tr>-->
                        <tr>
                            <td t-esc="1"/>
                            <td t-esc="2"/>
                            <td t-esc="3"/>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </t>

    <t t-name="tmsOrderList3">
                <div class="container cdf">
            <div class="card mt-2">
            <div class="card-header">
                <h2 class="card-title">Информация о заказе</h2>
            </div>
                <div class="card">
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th title="Date arrival">Date arrival</th>
                        <td><t t-esc="1"></t></td>
                    </tr>
                    <tr>
                        <th title="Date return from client">Date return from client</th>
                        <td><t t-esc="2"></t></td>
                    </tr>
                    <tr>
                        <th title="Date return from store">Date return from store</th>
                        <td><t t-esc="3"></t></td>
                    </tr>
                    <tr>
                        <th title="Date deliver">Date deliver</th>
                        <td><t t-esc="4"></t></td>
                    </tr>
                    <tr>
                        <th title="Date claim">Date claim</th>
                        <td><t t-esc="5"></t></td>
                    </tr>
                </table>
            </div>
        </div>
        </div>
                    <div class="d-flex justify-content-center">
                <div class="o_tms_action_nav" style="width: 100%;">
                    <button title="Arrival"
                            class="o_tms_btn_Arrival btn btn-lg btn-block btn-secondary border fa fa-clock-o mt-4"
                            t-on-click="onArrivalButtonClick"> Arrival</button>
                    <button title="Return from client"
                            class="o_tms_btn_Returned btn btn-lg btn-block btn-secondary border fa fa-shopping-cart mt-4"
                            t-on-click="onReturnedClientButtonClick"> Return from client</button>
                    <button title="Delivered"
                            class="o_tms_btn_Delivered btn btn-lg btn-block btn-secondary border fa fa-cubes  mt-4"
                            t-on-click="onDeliveredButtonClick"> Delivered</button>
                    <button title="No claims"
                            class="o_tms_btn_Claims btn btn-lg btn-block btn-secondary border fa fa-warning mt-4"
                            t-on-click="onNoClaimsButtonClick"> No claims</button>
                </div>
            </div>
        </div>
    </t>
</template>